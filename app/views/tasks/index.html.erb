<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed %>
    <!-- <a href="<%  %>"><input type="checkbox" checked> <%= task.title %><br></a> -->
    <input type="checkbox" checked>
    <%= link_to(task.title, task_path(task.id)) %><br>
  <% else %>
    <input type="checkbox" >
    <%= link_to(task.title, task_path(task.id)) %><br>
  <% end %>

<% end %>
